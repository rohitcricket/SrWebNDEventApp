
<h1>Listing Events</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Type</th>
      <th>Host</th>
      <th>Start</th>
      <th>End</th>
      <th>User</th>
      <th>Address</th>
      <th>Description</th>
    </tr>
  </thead>

  <tbody>
    <% @places.each do |place| %>
      <tr>
        <td><%= place.name %></td>
        <td><%= place.type %></td>
        <td><%= place.host %></td>
        <td><%= place.start %></td>
        <td><%= place.end %></td>
        <td><%= place.user_id %></td>
        <td><%= place.address %></td>
        <td><%= place.description %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if current_user %> 
  <%= link_to 'New Place', new_place_path %>
<% end %>
